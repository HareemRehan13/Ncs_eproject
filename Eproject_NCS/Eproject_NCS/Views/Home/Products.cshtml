@model IEnumerable<Eproject_NCS.Models.Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Products -->

<section class="plans d-flex align-items-center py-5" style="height:auto">
    <div class="container text-light">
		<div class="text-center pb-4">
            <br /><br />
            <p>OUR PRODUCTS</p>
            <h2 class="py-2">Explore Our Products</h2>
 <p class="para-light">Lorem ipsum dolor sit amet consectetur adipisicing elit. Vitae asperiores, quia accusantium sunt corporis optio recusandae? Nostrum libero pariatur cumque, ipsa dolores voluptatibus voluptate alias sit fuga. Itaque, ea quo.</p>
        </div>

                    <div class="row gy-4" data-aos="zoom-in">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4">

                                <div class="card bg-transparent px-4">
                                    <img src="@Html.DisplayFor(modelProduct=>item.Image)" class="" height="200">

                                    <div class="block d-flex align-items-center">
                                        <h4 class="py-3"> <p>      @Html.DisplayFor(modelProduct => item.ProductName)</p></h4>
                                    </div>
                                    <div class="block d-flex align-items-center">
                                        <p class="pe-2"><i class="far fa-check-circle fa-1x"></i></p>
                                        <p> @Html.DisplayNameFor(model => model.ProductType) : @Html.DisplayFor(modelProduct => item.ProductType)</p>
                                    </div>
                                    <div class="block d-flex align-items-center">
                                        <p class="pe-2"><i class="far fa-check-circle fa-1x"></i></p>
                                        <p>
                                            @Html.DisplayNameFor(model => model.Stock) :
                                            @Html.DisplayFor(modelProduct => item.Stock)
                                        </p>
                                    </div>

                                    <h4 class="py-3"> @Html.DisplayFor(modelProduct => item.Price)</h4>

                                    <div class="my-3">
                                        <form asp-action="Create" asp-controller="Orders">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                            <div class="form-group">

                                                <input name="ProductId" value="@item.ProductId" type="hidden" />
                                            </div>
                                            <div class="form-group">
                                                <input type="submit" value="Buy Now" class="btn" />
                                            </div>
                                        </form>
                                        @*   <a class="btn" asp-action="Create" asp-controller="Orders"asp-route-id="@item.ProductId">Buy Now</a> *@
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                </div> <!-- end of row -->

        <!-- end of container -->

</section> <!-- end of plans -->