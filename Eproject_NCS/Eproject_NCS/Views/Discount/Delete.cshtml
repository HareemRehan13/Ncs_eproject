@model Eproject_NCS.Models.DiscountScheme

@{
    ViewData["Title"] = "Delete Discount Scheme";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 headings">Delete Discount Scheme</h1>
    </div>

    <div class="bg-light p-4 custom-shadow">
        <h4>Are you sure you want to delete this discount scheme?</h4>
        <hr />
        <h4><em>Scheme ID: @Html.DisplayFor(model => model.SchemeId)</em></h4>

        <dl class="row">
            <dt class="col-sm-2">
                <strong>Minimum Connections:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MinConnections)
            </dd>
            <dt class="col-sm-2">
                <strong>Maximum Connections:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaxConnections)
            </dd>
            <dt class="col-sm-2">
                <strong>Discount Percentage:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DiscountPercentage)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="SchemeId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
