@model Eproject_NCS.Models.ServicePlan

@{
    ViewData["Title"] = "Delete Service Plan";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 headings">Delete Service Plan</h1>
    </div>

    <div class="bg-light p-4 custom-shadow">
        <h4>Are you sure you want to delete this service plan?</h4>
        <hr />
        <h4><em>Plan ID: @Html.DisplayFor(model => model.PlanId)</em></h4>

        <dl class="row">
            <dt class="col-sm-2">
                <strong>Plan Type:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PlanType)
            </dd>
            <dt class="col-sm-2">
                <strong>Description:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                <strong>Price:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                <strong>Security Deposit:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SecurityDeposit)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="PlanId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
