@model Eproject_NCS.Models.ServicePlan

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 headings">Edit Service Plan</h1>
    </div>

    <div class="bg-light p-4 custom-shadow">
        <!-- Rounded corners -->
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlanId" />

            <div class="form-group">
                <label asp-for="PlanType" class="form-label control-label"></label>
                <input asp-for="PlanType" class="form-control rounded-input" />
                <span asp-validation-for="PlanType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label control-label"></label>
                <input asp-for="Description" class="form-control rounded-input" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="form-label control-label"></label>
                <input asp-for="Price" class="form-control rounded-input" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SecurityDeposit" class="form-label control-label"></label>
                <input asp-for="SecurityDeposit" class="form-control rounded-input" />
                <span asp-validation-for="SecurityDeposit" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary rounded-button" />
			</div>
			<div>
				<a asp-action="Index">Back to List</a>
			</div>
        </form>
    </div>

</div>
