@model Eproject_NCS.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 headings">Customer Details</h1>
    </div>

    <div class="bg-light p-4 custom-shadow">
        <h4><em>Customer ID: @Html.DisplayFor(model => model.CustomerId)</em></h4>
        <p>
            <strong>Account ID:</strong> @Html.DisplayFor(model => model.AccountId)
        </p>
        <p>
            <strong>Name:</strong> @Html.DisplayFor(model => model.Name)
        </p>
        <p>
            <strong>Address:</strong> @Html.DisplayFor(model => model.Address)
        </p>
        <p>
            <strong>Phone Number:</strong> @Html.DisplayFor(model => model.PhoneNumber)
        </p>
        <p>
            <strong>Email:</strong> @Html.DisplayFor(model => model.Email)
        </p>
        <p>
            <strong>Status:</strong> @Html.DisplayFor(model => model.Status)
        </p>

        <div>
            <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-secondary">Edit</a>
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</div>
