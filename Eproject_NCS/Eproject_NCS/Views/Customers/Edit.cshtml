@model Eproject_NCS.Models.Customer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 headings">Edit Customer</h1>
    </div>

    <div class="bg-light p-4 custom-shadow">
        <!-- Rounded corners -->
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerId" />

            <div class="form-group">
                <label asp-for="AccountId" class="form-label control-label"></label>
                <input asp-for="AccountId" class="form-control rounded-input" />
                <span asp-validation-for="AccountId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="form-label control-label"></label>
                <input asp-for="Name" class="form-control rounded-input" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="form-label control-label"></label>
                <input asp-for="Address" class="form-control rounded-input" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="form-label control-label"></label>
                <input asp-for="PhoneNumber" class="form-control rounded-input" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label control-label"></label>
                <input asp-for="Email" class="form-control rounded-input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Status" class="form-label control-label"></label>
                <input asp-for="Status" class="form-control rounded-input" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary rounded-button" />
			</div> 
            <div>
				<a asp-action="Index">Back to List</a>
			</div>
        </form>
    </div>

  
</div>
