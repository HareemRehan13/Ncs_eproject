@model Eproject_NCS.Models.Vendor

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 headings">Edit Vendor</h1>
    </div>

    <div class="bg-light p-4 custom-shadow">
        <!-- Rounded corners -->
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VendorId" />

            <div class="form-group">
                <label asp-for="VendorName" class="form-label control-label"></label>
                <input asp-for="VendorName" class="form-control rounded-input" />
                <span asp-validation-for="VendorName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContactPerson" class="form-label control-label"></label>
                <input asp-for="ContactPerson" class="form-control rounded-input" />
                <span asp-validation-for="ContactPerson" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContactNumber" class="form-label control-label"></label>
                <input asp-for="ContactNumber" class="form-control rounded-input" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label control-label"></label>
                <input asp-for="Email" class="form-control rounded-input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary rounded-button" />
			</div> <div>
				<a asp-action="Index">Back to List</a>
			</div>
        </form>
    </div>

   
</div>
