@model Eproject_NCS.Models.RetailShop

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 headings">Edit Retail Shop</h1>
    </div>

    <div class="bg-light p-4 custom-shadow">
        <!-- Rounded corners -->
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShopId" />

            <div class="form-group">
                <label asp-for="ShopName" class="form-label control-label"></label>
                <input asp-for="ShopName" class="form-control rounded-input" />
                <span asp-validation-for="ShopName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="form-label control-label"></label>
                <input asp-for="Address" class="form-control rounded-input" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContactNumber" class="form-label control-label"></label>
                <input asp-for="ContactNumber" class="form-control rounded-input" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary rounded-button" />
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>

</div>
