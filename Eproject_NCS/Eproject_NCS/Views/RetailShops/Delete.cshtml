@model Eproject_NCS.Models.RetailShop

@{
    ViewData["Title"] = "Delete Retail Shop";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 headings">Delete Retail Shop</h1>
    </div>

    <div class="bg-light p-4 custom-shadow">
        <h4>Are you sure you want to delete this retail shop?</h4>
        <hr />
        <h4><em>Shop ID: @Html.DisplayFor(model => model.ShopId)</em></h4>

        <dl class="row">
            <dt class="col-sm-2">
                <strong>Shop Name:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShopName)
            </dd>
            <dt class="col-sm-2">
                <strong>Address:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-2">
                <strong>Contact Number:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContactNumber)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ShopId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
