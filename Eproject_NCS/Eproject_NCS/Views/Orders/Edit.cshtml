@model Eproject_NCS.Models.Order

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 headings">Edit Order</h1>
    </div>

    <div class="bg-light p-4 custom-shadow">
        <!-- Rounded corners -->
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderId" />
            <input type="hidden" asp-for="CustomerId" />

            <div class="form-group">
                <label asp-for="Status" class="form-label control-label"></label>
                <input asp-for="Status" class="form-control rounded-input" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EquipmentId" class="form-label control-label"></label>
                <select asp-for="EquipmentId" class="form-control rounded-input" asp-items="ViewBag.EquipmentId"></select>
                <span asp-validation-for="EquipmentId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary rounded-button" />
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>

   
</div>
