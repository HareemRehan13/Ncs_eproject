@model Eproject_NCS.Models.Order

@{
    ViewData["Title"] = "Delete Order";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 headings">Delete Order</h1>
    </div>

    <div class="bg-light p-4 custom-shadow">
        <h4>Are you sure you want to delete this order?</h4>
        <hr />
        <h4><em>Order ID: @Html.DisplayFor(model => model.OrderId)</em></h4>

        <dl class="row">
            <dt class="col-sm-2">
                <strong>Order Date:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderDate)
            </dd>
            <dt class="col-sm-2">
                <strong>Status:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>
            <dt class="col-sm-2">
                <strong>Customer ID:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.CustomerId)
            </dd>
            <dt class="col-sm-2">
                <strong>Product ID:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Equipment.ProductId)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="OrderId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
