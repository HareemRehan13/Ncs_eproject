@model Eproject_NCS.Models.Billing

@{
    ViewData["Title"] = "Delete Billing";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 headings">Delete Billing</h1>
    </div>

    <div class="bg-light p-4 custom-shadow">
        <h4>Are you sure you want to delete this billing record?</h4><hr />
        <h4><em>Billing ID: @Html.DisplayFor(model => model.BillingId)</em></h4>

        <dl class="row">
            <dt class="col-sm-2">
                <strong>Bill Date:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BillDate)
            </dd>
            <dt class="col-sm-2">
                <strong>Total Amount:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalAmount)
            </dd>
            <dt class="col-sm-2">
                <strong>Connection ID:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Connection.ConnectionId)
            </dd>
            <dt class="col-sm-2">
                <strong>Customer ID:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.CustomerId)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="BillingId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
