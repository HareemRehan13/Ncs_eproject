@model Eproject_NCS.Models.Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 headings">Delete Product</h1>
    </div>

    <div class="bg-light p-4 custom-shadow">
        <h4>Are you sure you want to delete this product?</h4>
        <hr />
        <h4><em>Product ID: @Html.DisplayFor(model => model.ProductId)</em></h4>

        <dl class="row">
            <dt class="col-sm-2">
                <strong>Product Name:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-2">
                <strong>Product Type:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductType)
            </dd>
            <dt class="col-sm-2">
                <strong>Stock:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Stock)
            </dd>
            <dt class="col-sm-2">
                <strong>Price:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                <strong>Image:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Image)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ProductId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
